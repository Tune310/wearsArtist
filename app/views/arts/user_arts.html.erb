<h1 style="font-family: 'Desdemona'; font-size: 46px; font-style: italic; color: rgba(59, 255, 0, 0.46);">Art</h1>
<div style="display: inline">
  <h3 style="font-family: 'Lobster Two', cursive; font-style: italic; color: rgba(255, 255, 255, 0.84);"><%= link_to "Upload", new_art_path %></h3>

</div>
<% @arts.each do |a| %>
<div style="display: inline-block;">
  <h3 style="color: rgb(255, 168, 0);"> <%= a.title %></h3>
  <%= link_to "Edit", edit_art_path(a) %>
  <%= image_tag a.avatar.url(:medium) %>
  <br>
  <%= link_to "Delete", art_path(a), method: :delete, data: {confirm: "Are you fucking kidding me?"} %>

  <p style="color: rgb(32, 255, 177); margin-top: 10px; margin-bottom: 0px;"><%= a.description %></p>

</div>
<% end %>
